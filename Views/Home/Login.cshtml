@{ if (Session["user"] != null) {
        Response.Redirect("/");
    }
}
    <div class="container col-4 my-md-5">
        <form action="/User/Login" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1">Phone</label>
                <input type="tel" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="Phone">
                <small id="emailHelp" class="form-text text-muted">We'll never share your phone with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" name="Password">
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1" name="CheckMeOut">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
        <br />

        @{ if (Session["LoginErrors"] != null)
            {

                foreach (string error in Session["LoginErrors"].ToString().Split(new char[] { '/' }))
                {
                    <div class="alert alert-danger" role="alert">
                        @error
                    </div>
                }
                    
                }}
        </div>

